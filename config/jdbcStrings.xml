<datasources>
    <datasource>
        <name>Postgres</name>
        <driver_class>org.postgresql.Driver</driver_class>
        <server_string>jdbc:postgresql://[host]:[port]/[database]</server_string>
        <default_port>5432</default_port>
        <url>http://jdbc.postgresql.org/</url>
        <schema>public</schema>
    </datasource>
    <datasource>
        <name>MySql</name>
        <driver_class>com.mysql.jdbc.Driver</driver_class>
        <server_string>jdbc:mysql://[host]/[database]</server_string>
        <default_port>3306</default_port>
        <url>http://dev.mysql.com/downloads/connector/j/3.1.html</url>
        <schema>public</schema>
    </datasource>
    <datasource>
        <name>Oracle - thin</name>
        <driver_class>oracle.jdbc.driver.OracleDriver</driver_class>
        <server_string>jdbc:oracle:thin:@[host]:[port]:[database]</server_string>
        <default_port>1521</default_port>
        <url>http://www.oracle.com/technology/software/tech/java/sqlj_jdbc/index.html</url>
        <schema>same as user name, but in caps</schema>
    </datasource>
    <datasource>
        <name>Oracle - OCI</name>
        <driver_class>oracle.jdbc.driver.OracleDriver</driver_class>
        <server_string>jdbc:oracle:oci8:@[database]</server_string>
        <url>http://www.oracle.com/technology/software/tech/java/sqlj_jdbc/index.html</url>
        <schema>same as user name, but in caps</schema>
    </datasource>
    <datasource>
        <name>Informix</name>
        <driver_class>com.informix.jdbc.IfxDriver</driver_class>
        <server_string>jdbc:informix-sqli://[host]:[port]:informixserver=&lt;ifx_server&gt;</server_string>
        <url>http://www-306.ibm.com/software/data/informix/tools/jdbc/</url>
    </datasource>
    <datasource>
        <name>DB2</name>
        <driver_class>COM.ibm.db2.jdbc.app.DB2Driver</driver_class>
        <server_string>jdbc:db2://[host]/[database]</server_string>
        <url>http://www-306.ibm.com/software/data/db2/db2connect/</url>
    </datasource>
    <datasource>
        <name>Sybase</name>
        <driver_class>com.sybase.jdbc2.jdbc.SybDriver</driver_class>
        <server_string>jdbc:sybase:Tds:[host]:[port]/[database]</server_string>
        <default_port>2638</default_port>
        <url>http://www.sybase.com/</url>
    </datasource>
    <datasource>
        <name>SQLServer - Microsoft Driver</name>
        <driver_class>com.microsoft.jdbc.sqlserver.SQLServerDriver</driver_class>
        <server_string>jdbc:microsoft:sqlserver://[host]:[port]</server_string>
        <default_port>1433</default_port>
        <url>http://www.microsoft.com/</url>
        <schema>dbo</schema>
    </datasource>
    <datasource>
        <name>SQLServer - jTDS Driver</name>
        <driver_class>net.sourceforge.jtds.jdbc.Driver</driver_class>
        <server_string>jdbc:jtds:sqlserver://[host]:[port]/[database]</server_string>
        <default_port>1433</default_port>
        <url>http://jtds.sourceforge.net/</url>
        <schema>dbo</schema>
    </datasource>
    <datasource>
        <name>Sybase - jTDS Driver</name>
        <driver_class>net.sourceforge.jtds.jdbc.Driver</driver_class>
        <server_string>jdbc:jtds:sybase://[host]:[port]/[database]</server_string>
        <default_port>7100</default_port>
        <url>http://jtds.sourceforge.net/</url>
    </datasource>
    <datasource>
        <name>HypersonicSQL - server</name>
        <driver_class>org.hsqldb.jdbcDriver</driver_class>
        <server_string>jdbc:hsqldb:hsqls://[host]:[port]/[database]</server_string>
        <default_port>9001</default_port>
        <url>http://hsqldb.sourceforge.net/</url>
        <schema>PUBLIC</schema>
    </datasource>
    <datasource>
        <name>HypersonicSQL - file</name>
        <driver_class>org.hsqldb.jdbcDriver</driver_class>
        <server_string>jdbc:hsqldb:file:&lt;file&gt;</server_string>
        <url>http://hsqldb.sourceforge.net/ (but it's embedded)</url>
        <schema>PUBLIC</schema>
    </datasource>
    <datasource>
        <name>Mckoi</name>
        <driver_class>com.mckoi.JDBCDriver</driver_class>
        <server_string>jdbc:mckoi://[host]/[database]</server_string>
        <url>http://www.mckoi.com/database/</url>
    </datasource>
</datasources>

